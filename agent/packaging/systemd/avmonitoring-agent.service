[Unit]
Description=AV Monitoring Agent
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=avmonitoring
Group=avmonitoring
WorkingDirectory=/opt/avmonitoring-agent/agent
EnvironmentFile=-/etc/default/avmonitoring-agent
ExecStart=/opt/avmonitoring-agent/agent/venv/bin/uvicorn src.webapp:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=avmonitoring-agent

# Sécurité
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/avmonitoring /var/log/avmonitoring /etc/avmonitoring

# Capabilities pour ping ICMP sans root
AmbientCapabilities=CAP_NET_RAW
CapabilityBoundingSet=CAP_NET_RAW

[Install]
WantedBy=multi-user.target
